{
  "name": "Tidy Task",
  "description": "Work Optimization Toolkit",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "128": "logo128.png"
  },
  "background": {
    "service-worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
